{
  "name": "Inteligir",
  "description": "Inteligir is a platform to build interactive visual explanations",
  "author": "Kaiyu Hsu <im.kaiyu@gmail.com> (http://github.com/tehkaiyu)",
  "license": "MIT",
  "version": "0.0.0",
  "main": "server/index.js",
  "engines": {
    "node": "8.11.4",
    "npm": "5.6.0"
  },
  "scripts": {
    "heroku-postbuild": "npm run build",
    "postinstall": "npm install --prefix server && npm install --prefix client",
    "setup": "npm run decrypt-env && npm install",
    "start": "node server/index.js",
    "server": "nodemon -r dotenv/config server/index.js --ignore tests",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "NPM_CONFIG_PRODUCTION=false npm run build --prefix client",
    "deploy": "node -r dotenv/config tools/deploy",
    "precommit": "pretty-quick --staged",
    "encrypt-env": "openssl aes-256-cbc -a -salt -in .env -pass file:encrypted/.inteligir_dev.key -out encrypted/env.enc",
    "decrypt-env": "openssl aes-256-cbc -d -a -salt -in encrypted/env.enc -pass file:encrypted/.inteligir_dev.key -out .env",
    "analyze": "source-map-explorer client/build/static/js/main.*",
    "test": "jest"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./tests/setup.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Inteligir/Inteligir"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules",
    "server/node_modules"
  ],
  "devDependencies": {
    "ajv": "6.0.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "9.0.0",
    "concurrently": "4.0.1",
    "dotenv": "6.0.0",
    "eslint": "5.4.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "jest": "23.5.0",
    "puppeteer": "1.8.0",
    "husky": "0.14.3",
    "inquirer": "6.2.0",
    "nodemon": "1.18.4",
    "prettier": "1.14.2",
    "pretty-quick": "1.7.0",
    "source-map-explorer": "1.6.0"
  }
}
